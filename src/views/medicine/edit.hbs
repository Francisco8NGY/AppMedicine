<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    {{#each medicine}}
                    <form action="/medicine/edit/{{id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{name}}" class="form-control" name="name" placeholder="Title"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <input type="date" value="{{dateExpire}}" name="dateExpire" class="form-control"
                                placeholder="Date Expire">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description">{{description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>