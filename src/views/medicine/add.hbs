<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/medicine/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Name Medicine" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="date" name="dateExpire" class="form-control" placeholder="Date Expire">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="number" name="noti" value="0" hidden>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>